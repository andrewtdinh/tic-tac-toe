doctype html
html
  head
    meta(charset='utf-8')      
    title Tic-Tac-Toe
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootswatch/3.3.4/superhero/bootstrap.min.css')
    link(rel='stylesheet', href='/vendor/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href=isProd ? '/index.min.css' : '/index.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body
    h1#title Tic Tac Toe
    
    #controls
      button#reset Reset
      button#start Start Game
      #chooser
        label P1
        input#p1-choose(type='color', value='#ff33cc')
        label P2
        input#p2-choose(type='color', value='#33ccff')
        
      #players
        #p1.player
        #p2.player
    table
      tbody
        tr
          td
          td
          td
        tr
          td
          td
          td
        tr
          td
          td
          td
    h2#game-verdict
    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src='/vendor/lodash/lodash.min.js')
    script(src=isProd ? '/index.min.js' : '/index.js')
